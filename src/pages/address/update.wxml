<navigation-bar title="{{areaItem ? '编辑':'添加'}}收货地址" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view class="content">
  <view class="header">
    <text class="header-title">地址信息</text>
    <view wx:if="{{!areaItem || areaItem && !areaItem.commonAddr}}" class="header-btn" bindtap="toggleDefault">
      设为默认
      <text class="header-btn-radio {{isDefault ? 'active' : ''}}"></text>
    </view>
  </view>
  <form class="form" catchsubmit="handleSubmit">
    <view class="form-row user">
      <view class="form-label">收货人</view>
      <view class="form-input-box">
        <input class="form-input" type="text" value="{{areaItem.receiver}}" placeholder="收件人名字" name="receiver" />
      </view>
    </view>
    <view class="form-row phone">
        <view class="form-label">手机号码</view>
        <view class="form-input-box">
          <input class="form-input" type="number" value="{{areaItem.mobile}}" placeholder="手机号码" name="mobile" />
        </view>
    </view>
    <view class="form-row city">
        <view class="form-label">所在地区</view>
        <view class="form-input-box">
          <address-picker class="address-coms" bind:onChange="handleChange">
            <input value="{{areaInfoText}}" disabled="{{true}}" class="form-input" slot="btn" placeholder="省 / 市 / 街道" />
          </address-picker>
        </view>
    </view>
    <view class="form-row address">
        <view class="form-label">详细地址</view>
        <view class="form-area-box">
          <textarea maxlength="{{50}}" class="form-area" value="{{areaItem.addr}}" placeholder="详细的地址信息" name="addr" />
        </view>
    </view>
    <button class="address-save" formType="submit">保存</button>
  </form>
</view>

