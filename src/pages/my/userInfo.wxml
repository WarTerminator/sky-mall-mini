<navigation-bar class="nav-bar" title="个人资料" back="{{true}}" color="black" background="rgba(255,255,255,0)"></navigation-bar>
<view class="bg">
  <image src="{{IMG_PRE + 'user-bg.png'}}" mode="widthFix" />
  <view class="bg-edit">更换背景</view>
</view>
<view class="info" >
  <view class="avatar-wrapper" bindtap="handleEditAvatar">
    <image src="{{avatar}}" />
  </view>
  <view class="edit" bindtap="handleEditAvatar">更换头像</view>
</view>
<view class="form">
  <view class="form-row">
    <view class="form-label">平台昵称</view>
    <view class="form-content nickname">
      <input placeholder="昵称" value="{{nickName}}" bindinput="handleInputName" />
      <view class="save" bindtap="handleSavaName">保存</view>
    </view>
  </view>
  <view class="form-row">
    <view class="form-label">手机号</view>
    <view class="form-content mobile">
      <view wx:if="{{mobile}}" class="number">{{mobile}}</view>
      <button class="edit" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">{{mobile ? '重新绑定' : '去绑定'}}</button>
    </view>
  </view>
  <view class="form-row">
    <view class="form-label">性别</view>
    <view class="form-content sex">
      <view
        class="sex-item {{sex === item.type ? 'active' : ''}}"
        wx:for="{{sexList}}"
        wx:key="index"
        data-item="{{item}}"
        bindtap="handleSelectSex"
      >
        <text wx:if="{{item.type}}" class="sex-icon-{{item.type}}"></text>
        <text class="sex-name">{{item.name}}</text>
      </view>
    </view>
  </view>
  <view class="form-row">
    <view class="form-label">身份信息</view>
    <view class="form-content verify">
      去认证 >
    </view>
  </view>
</view>