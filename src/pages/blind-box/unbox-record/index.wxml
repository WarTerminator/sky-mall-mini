<!--抽卡记录-->
<view class="unbox-record">
  <view class="tab-wrap">
    <view class="tab-item {{!onlyMine ? 'selected' : ''}}" data-item="all" bind:tap="handlwSwitchTab">全服抽卡记录</view>
    <view class="tab-item {{onlyMine ? 'selected' : ''}}" data-item="mine" bind:tap="handlwSwitchTab">我的抽卡记录</view>
  </view>
  <view class="tip-wrap">* 记录每3分钟更新</view>
  <scroll-view scroll-y class="scroll-wrap">
    <view class="record-list">
      <view wx:for="{{[1,2,3,4,5,6,7,8]}}" wx:key="*this" class="record-item">
        <image class="item-img" src="https://img.war6sky.com/2024/08/6899c6068eec424fb5962cd9b7200229.png" mode="aspectFit"></image>
        <view class="item-title">KPL 夏日主题 明星典藏小卡   一诺</view>
        <image class="user-avatar" src="https://img.war6sky.com/2024/08/6899c6068eec424fb5962cd9b7200229.png" mode="aspectFill"></image>
        <view class="record-time">2024-07-25     16:10:15</view>
      </view>
    </view>
  </scroll-view>
</view>